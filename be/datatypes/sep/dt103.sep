             message 'param1 = FALSE';-
          elseif bval is true then-
             message 'param1 = TRUE';-
          elseif bval is null then-
             message 'param1 = NULL';-
          else-
             message 'param1 is NOT BOOLEAN`';-
          endif;-
        end;\g
<<
